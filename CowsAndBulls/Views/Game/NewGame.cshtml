@model EnterNumberViewModel
@{
    ViewData["Title"] = "Didi";
}

<h1>  Cows and Bulls  </h1>
<h3> An easy game. Just contrive a 4 digit number and do not duplicate them.</h3>

<div>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Number" class="control-label"> Write your number:</label>
                    <input asp-for="Number" value ="" class="form-control" autofocus />
                    <span asp-validation-for="Number" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Enter Number" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
</div>

