@model CowsAndBulls.Models.EnterNumberViewModel

<!--<h4>EnterNumberViewModel</h4>-->
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EnterNumber">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Number" class="control-label">Write your guess:</label>
                <input asp-for="Number" value ="" class="form-control" autofocus caret-color="red"/>
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Enter Number" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

